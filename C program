#include <stdio.h>
#include <time.h>

int main() {
    int choice;
    char text[300];
    char filename[20];
    FILE *fp;

    while(1) {
        printf("\n--- SIMPLE DAILY DIARY ---\n");
        printf("1. Write Today's Entry\n");
        printf("2. Read Today's Entry\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        getchar(); // remove newline

        // Get today's date
        time_t now = time(NULL);
        struct tm *t = localtime(&now);
        sprintf(filename, "%04d_%02d_%02d.txt",
                t->tm_year + 1900, t->tm_mon + 1, t->tm_mday);

        if (choice == 1) {
            fp = fopen(filename, "a");  // append
            if (fp == NULL) {
                printf("Error opening file!\n");
                continue;
            }

            printf("Write your entry:\n");
            fgets(text, sizeof(text), stdin);

            fprintf(fp, "%s\n", text);
            fclose(fp);

            printf("Entry saved!\n");
        }

        else if (choice == 2) {
            fp = fopen(filename, "r");  // read
            if (fp == NULL) {
                printf("No entry found for today.\n");
                continue;
            }

            printf("\n--- Today's Diary ---\n");
            while (fgets(text, sizeof(text), fp)) {
                printf("%s", text);
            }
            fclose(fp);
        }

        else if (choice == 3) {
            printf("Goodbye!\n");
            break;
        }

        else {
            printf("Invalid choice!\n");
        }
    }

    return 0;
}
